<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="empdto">

<select id="Emp_getList" parameterType="EmpDto" resultType="EmpDto">
	select emp_id, emp_nm, dept_no, aprv_yn from emp_mng_tb
</select>

<select id="Emp_getView" parameterType="EmpDto" resultType="EmpDto">
	select * from emp_mng_tb 
	where emp_id=#{emp_id}
</select>

<insert id="Emp_insert" parameterType="EmpDto">
	insert into 
	(
		emp_id 
		, emp_nm 
		, eml_addr
		, aprv_yn
	)
	values
	(
		#{emp_id}
		, #{emp_nm} 
		, #{eml_addr}
		, 'N'
	)
</insert>

<select id="Dept_getList" parameterType="DeptDto" resultType="DeptDto">
	select * from dept_tb;
</select>

<select id="Hobby_getList" parameterType="HobbyDto" resultType="HobbyDto">
	select * from hobby_tb;
</select>




</mapper>



